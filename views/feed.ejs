<%- include('partials/header') -%> <!--the header from header.ejs-->

<main>
    <div>
        <section>
          <div class="container">
            <div class="row justify-content-center mt-5">
              <ul class="row list-unstyled">
                <% for(var i=0; i<posts.length; i++) {%>
                  <li class="col-6 justify-content-between mt-5">
                    <a href="/post/<%= posts[i]._id%>"> <!-- grab the post property and id to return the post; so when you click on the link it will take you directly to the post; the /post/ is the name we want to have for the route on top. it can be named anything-->
                      <img class="img-fluid" src="<%= posts[i].image%>"> <!--get the post and in the post the image for that post and the src will return the link for the image stored under 'image' in the databse (since we are stroing them elsewhere and not directly)-->
                    </a>
                  </li>
                <% } %>
                </ul>
            </div>
          </div>  
        </section>
    </div>
</main>

<section class="sidebar">
    <div class="mt-5">
        <h2>Add a Route</h2>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="department" class="form-label">Department</label>
            <textarea class="form-control" id="department" name="department"></textarea>
          </div>
          <div class="mb-3">
            <label for="destination" class="form-label">Destination</label>
            <textarea class="form-control" id="destination" name="destination"></textarea>
          </div>
          <div class="mb-3">
            <label for="carrier" class="form-label">Carrier</label>
            <textarea class="form-control" id="carrier" name="carrier"></textarea>
          </div>
          <div class="mb-3">
            <label for="ttype" class="form-label">Truck Type</label>
            <textarea class="form-control" id="ttype" name="ttype"></textarea>
          </div>
          <div class="mb-3">
            <label for="ltime" class="form-label">Load Time</label>
            <textarea class="form-control" id="ltime" name="ltime"></textarea>
          </div>
          <div class="mb-3">
            <label for="transit" class="form-label">Transit Time</label>
            <textarea class="form-control" id="transit" name="transit"></textarea>
          </div>
          <div class="mb-3">
            <label for="special" class="form-label">Special</label>
            <textarea class="form-control" id="special" name="special"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
</section>

<%- include('partials/footer') -%>