<%- include('partials/header') -%>
    <main class="containerLogin">
      <section class="signupHead">
        <h1>Log in to get complete access to cargo posts and port facility information</h1>
      </section>
        <div class="card card-compact w-96 bg-base-100 shadow-xl divLogin">
            <section class="card-body insideForm">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control input input-bordered input-accent w-full max-w-xs" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control input input-bordered input-accent w-full max-w-xs" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control input input-bordered input-accent w-full max-w-xs" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control input input-bordered input-accent w-full max-w-xs" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="btn btn-outline btn-info">Submit</button>
                  </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>